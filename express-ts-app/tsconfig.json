{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts"]
}
